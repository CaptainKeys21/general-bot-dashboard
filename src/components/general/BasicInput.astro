---
import type { HTMLAttributes } from 'astro/types';
import type { IKeynamedGeneralProperties } from '../../types/Config';

interface Props extends HTMLAttributes<'input'> {
  label?: boolean;
  key: string;
  config: IKeynamedGeneralProperties;
}

const { label, key, config, ...inputAttrs } = Astro.props;
---
<div>
  {label && (<label for={key}>{config.label}:</label>)}
  <input name={key} value={config.data || ''} {...inputAttrs} />
</div>
<style lang="scss" >
  @import '../../styles/variables.scss';

  div {
    display: flex;
    justify-content: end;
    align-items: center;
        
    margin: 0.5rem;
    border: 2px solid $discordBlack-Darker;

    label {
      color: $discordWhite;
      background-color: $alphaDark;

      height: 100%;
      padding: 0.5rem;
      border-radius: 8px 0 0 8px;

      flex-grow: 1;
      
      text-align: end;
      white-space: nowrap;
    }

    input {
      background-color: $discordBlack;
      color: $discordWhite;

      flex-grow: 4;

      height: 100%;
      padding: 0.5rem;
      
      border: none;
      border-radius: 0 8px 8px 0;
    }
  }
</style>